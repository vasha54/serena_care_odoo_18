            <field name="description">Servicio médico disponible las 24 horas del día con médicos especializados en geriatría</field>
            <field name="active">True</field>
        </record>
        <record id="service_nursing" model="residence_service">
            <field name="name">Enfermería Especializada</field>
            <field name="description">Personal de enfermería capacitado en cuidados geriátricos</field>
