<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View resident.family View List -->
    <record id="view_resident_family_list" model="ir.ui.view">
        <field name="name">view.resident.family.list</field>
        <field name="model">resident.family</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View resident.family form -->
    <record id="view_resident_family_form" model="ir.ui.view">
        <field name="name">view.resident.family.form</field>
        <field name="model">resident.family</field>
        <field name="arch" type="xml">
            <form string="Resident Family">
                <sheet>
                    <field name="active" invisible="1" />
                            <field name="id" invisible="1" />
                            <field name="image_1920" widget="image" class="oe_avatar" 
                                options='{"preview_image": "image_128"}' readonly="not active"/>
                            <div class="oe_title">
                                <h1>
                                    <field string="Nombre" name="name" required="1"
                                        placeholder="Nombre del residente" class="mb-0" 
                                        readonly="not active"
                                        />
                                </h1>
                            </div>

                            <group col="2">
                                <group string="Contacto">
                                    <field name="phone" widget="phone" readonly="not active"/>
                                    <field name="mobile" widget="phone" readonly="not active"/>
                                    <field name="email" widget="email" readonly="not active"/>
                                </group>
                            </group>

                            <group col="2">
                                <group string="Dirección">
                                    <group col="2">
                                        <field name="country_id" placeholder="País" readonly="not active"/>
                                        <field string="Estado" name="province_id" placeholder="Estado"
                                                class="o_address_country" 
                                                domain="[('country_id','=',country_id)]" readonly="not active"/>
                                        <field string="Municipio" name="municipality_id"
                                                class="o_address_state"
                                                placeholder="Municipio"
                                                domain="[('province_id','=',province_id)]" readonly="not active"/>
                                        <field string="Ciudad" name="city" placeholder="Ciudad"
                                                class="o_address_city" readonly="not active"/>
                                        <field string="Código Postal" name="zip" placeholder="C.P." readonly="not active"/>
                                    </group>
                                    <group col="2">
                                        <field string="Calle principal" name="street" placeholder="Calle principal" readonly="not active"/>
                                        <field string="Entre Calle #1" name="street2" placeholder="Entre calle 1" readonly="not active"/>
                                        <field name="street3" placeholder="Entre calle 2" readonly="not active"/>
                                        <field name="street_number" placeholder="Número" readonly="not active"/>
                                    </group>
                                        
                                </group>
                                <group string="Información Adicional">
                                    <field string="Notas" name="comment" placeholder="Notas adicionales..." readonly="not active"/>
                                    <field name="partner_id" invisible="1"/>
                                </group>
                            </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View resident.family search -->
    <record id="view_resident_family_search" model="ir.ui.view">
        <field name="name">view.resident.family.search</field>
        <field name="model">resident.family</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>

    <!-- Action resident.family -->
    <record id="action_resident_family" model="ir.actions.act_window">
        <field name="name">Resident Family</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">resident.family</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Resident Family.
            </p>
        </field>
    </record>

    <record id="action_resident_family_form" model="ir.actions.act_window">
        <field name="name">Resident Family</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">resident.family</field>
        <field name="view_mode">form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

</odoo>
