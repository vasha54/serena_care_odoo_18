<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View reassign.resident.residence.wizard form -->
    <record id="view_reassign_resident_residence_wizard_form" model="ir.ui.view">
        <field name="name">view.reassign.resident.residence.wizard.form</field>
        <field name="model">reassign.resident.residence.wizard</field>
        <field name="arch" type="xml">
            <form string="Reasignar Registros B">
                <group>
                    <field name="current_residence_id" readonly="1"/>
                    <field name="new_residence_id" required="1"/>
                </group>
                <footer>
                    <button 
                        name="action_reassign_residents" 
                        string="Reasignar" 
                        type="object" 
                        class="btn-primary"/>
                    <button 
                        string="Cancelar" 
                        special="cancel" 
                        class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>


</odoo>
