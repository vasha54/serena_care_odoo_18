<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- View residence_employee View List -->
    <record id="view_residence_employee_list" model="ir.ui.view">
        <field name="name">view.residence_employee.list</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <list default_order="name asc">
                <field string="Nombre" name="name"/>
                <field string="Departamento"  name="department_id" />
                <field string="Ocupación" name="job_id" />
                <field string="Residencia" name="residence_display" />
            </list>
        </field>
    </record>

    <!-- View residence_employee form -->
    <record id="view_residence_employee_form" model="ir.ui.view">
        <field name="name">view.residence_employee.form</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <form string="Residence_employee" context="{'employee_serena_care':True}">
                <field name="user_id" invisible="1"/>
                <field name="image_128" invisible="1"/>
                <sheet>
                    <field name="avatar_128" invisible="1"/>
                    <field name="image_1920" widget="image" class="oe_avatar m-0" options="{&quot;zoom&quot;: true, &quot;preview_image&quot;:&quot;avatar_128&quot;}"/>
                     <div class="oe_title">
                        <label string="Nombre" for="name"/>
                        <h1><field name="name"  placeholder="e.g. John Doe" required="1"/></h1>
                        
                    </div>
                        <group col="3" colspan="3" >
                            <group col="2" colspan="2" string="Centro de trabajo">
                                <field name="alternative_residences_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="residence_id" widget="many2one_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                                <field string="Departamento"  name="department_id" options="{'no_create': True, 'no_create_edit': True}"/>
                                <field string="Ocupación" name="job_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            </group>
                            <group string="Contacto">
                                <field string="Teléfono" name="work_phone" />
                                <field string="Correo electrónico" name="work_email" />
                            </group>
                             
                        </group>
                          
                </sheet>
            </form>
        </field>
    </record>

    <!-- View residence_employee search -->
    <record id="view_residence_employee_search" model="ir.ui.view">
        <field name="name">view.residence_employee.search</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                
            </search>
        </field>
    </record>

        
    <!-- Action residence_employee -->
    <record id="action_residence_employee" model="ir.actions.act_window">
        <field name="name">Listado de los empleados</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("is_employee_sc","=",True)]</field>
        <field name="context"></field>
        <field name="search_view_id" ref="view_residence_employee_search" />
        <field name="view_ids" eval="[ (5, 0, 0), 
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_residence_employee_list')}), 
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_residence_employee_form')})]"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No hay registros haga clic aquí para agregar nuevo Empleados.
            </p>
        </field>
    </record>

    <!-- Action residence_employee_departament -->
    <record id="action_residence_employee_departament" model="ir.actions.act_window">
        <field name="name">Listado de los departamentos</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.department</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{'active_test': False}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No hay registros haga clic aquí para agregar nuevo Departamento.
            </p>
        </field>
    </record>

     <!-- Action residence_employee_job -->
    <record id="action_residence_employee_job" model="ir.actions.act_window">
        <field name="name">Listado de ocupaciones</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.job</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{'active_test': False}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No hay registros haga clic aquí para agregar nueva Ocupaciones.
            </p>
        </field>
    </record>
</odoo>