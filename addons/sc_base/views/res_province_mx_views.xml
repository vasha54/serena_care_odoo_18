<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View res_province_mx View List -->
    <record id="view_res_province_mx_list" model="ir.ui.view">
        <field name="name">view.res_province_mx.list</field>
        <field name="model">res_province_mx</field>
        <field name="arch" type="xml">
            <list>
                <field string="Código" name="code"/>
                <field string="Nombre" name="name"/>
            </list>
        </field>
    </record>

    <!-- View res_province_mx form -->
    <record id="view_res_province_mx_form" model="ir.ui.view">
        <field name="name">view.res_province_mx.form</field>
        <field name="model">res_province_mx</field>
        <field name="arch" type="xml">
            <form string="Res_province_mx">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field string="Nombre del estado" name="name" placeholder="Nombre ..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field string="Código del estado" name="code"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View res_province_mx search -->
    <record id="view_res_province_mx_search" model="ir.ui.view">
        <field name="name">view.res_province_mx.search</field>
        <field name="model">res_province_mx</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Nombre" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action res_province_mx -->
    <record id="action_res_province_mx" model="ir.actions.act_window">
        <field name="name">Listado de Estados</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res_province_mx</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No hay registros haga clic aquí para agregar nuevo Estado.
            </p>
        </field>
    </record>

</odoo>
