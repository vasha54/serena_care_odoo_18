<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View res_municipality_mx View List -->
    <record id="view_res_municipality_mx_list" model="ir.ui.view">
        <field name="name">view.res_municipality_mx.list</field>
        <field name="model">res_municipality_mx</field>
        <field name="arch" type="xml">
            <list>
                <field string="Nombre" name="name"/>
                <field name="province_id"/>
            </list>
        </field>
    </record>

    <!-- View res_municipality_mx form -->
    <record id="view_res_municipality_mx_form" model="ir.ui.view">
        <field name="name">view.res_municipality_mx.form</field>
        <field name="model">res_municipality_mx</field>
        <field name="arch" type="xml">
            <form string="Res_municipality_mx">
                <sheet>
                    <div class="oe_title">
                        <label string="Nombre" for="name"/>
                        <h1>
                            <field name="name" placeholder="Nombre..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field string="Estado" name="province_id"/>
                        </group>
                        <group></group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View res_municipality_mx search -->
    <record id="view_res_municipality_mx_search" model="ir.ui.view">
        <field name="name">view.res_municipality_mx.search</field>
        <field name="model">res_municipality_mx</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <group expand="0" string="Agrupar por:">
                    <filter string="Provincia" name="province" domain="[]" context="{'group_by':'province_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action res_municipality_mx -->
    <record id="action_res_municipality_mx" model="ir.actions.act_window">
        <field name="name">Listado de municipios</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res_municipality_mx</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No hay registros haga clic aqu√≠ para agregar nuevo Municipios.
            </p>
        </field>
    </record>

</odoo>
