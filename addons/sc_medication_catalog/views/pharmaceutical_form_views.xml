<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View pharmaceutical.form View List -->
    <record id="view_pharmaceutical_form_list" model="ir.ui.view">
        <field name="name">view.pharmaceutical.form.list</field>
        <field name="model">pharmaceutical.form</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View pharmaceutical.form form -->
    <record id="view_pharmaceutical_form_form" model="ir.ui.view">
        <field name="name">view.pharmaceutical.form.form</field>
        <field name="model">pharmaceutical.form</field>
        <field name="arch" type="xml">
            <form string="Pharmaceutical Form">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Nombre..." class="text-uppercase"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View pharmaceutical.form search -->
    <record id="view_pharmaceutical_form_search" model="ir.ui.view">
        <field name="name">view.pharmaceutical.form.search</field>
        <field name="model">pharmaceutical.form</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>

    <!-- Action pharmaceutical.form -->
    <record id="action_pharmaceutical_form" model="ir.actions.act_window">
        <field name="name">Listado de Formas Farmacéuticas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pharmaceutical.form</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No hay registros haga clic aquí para agregar nueva Forma Farmacéutica.
            </p>
        </field>
    </record>

</odoo>
